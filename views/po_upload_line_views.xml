<odoo>
    <record id="po_upload_line_tree" model="ir.ui.view">
      <field name="name">po_upload.line.tree</field>
      <field name="model">po_upload.line</field>
      <field name="arch" type="xml">
        <tree string="Po Upload Line" decoration-danger="is_invalid_sku">
           <field name="buyer_order_number"/>
            <field name="sku_no"/>
            <field name="vendor_code"/>
            <field name="customer_id"/>
            <field name="vendor_id"/>
            <field name="quantity"/>
            <field name="order_date"/>
            <field name="po_issue_date"/>
            <field name="vendor_ex_fact_date"/>
            <field name="order_id" optional="hide"/>
            <field name="is_invalid_sku" invisible="1"/>
        </tree>
      </field>
    </record>
    <record id="view_po_upload_line_form" model="ir.ui.view">
        <field name="name">po_upload.line.form</field>
        <field name="model">po_upload.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="buyer_order_number"/>
                        <field name="sku_no"/>
                        <field name="vendor_code"/>
                        <field name="customer_id"/>
                        <field name="vendor_id"/>
                        <field name="quantity"/>
                        <field name="order_date"/>
                        <field name="po_issue_date"/>
                        <field name="vendor_ex_fact_date"/>
                        <!-- <field name="order_id"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
